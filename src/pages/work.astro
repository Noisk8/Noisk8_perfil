---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';

const projects = (await getCollection('work')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout
	title="Cursos| Noisk8"
	description="Learn about Noisk8 most recent projects"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Cursos"
				tagline="Si estás interesado en explorar la intersección entre la tecnología y la creatividad, estos cursos son perfectos para ti. Aprenderás a utilizar lenguajes de programación como JavaScript, Python y sopke para crear obras digitales únicas y sorprendentes.  y aplicaciones interactivas, nuestros cursos te brindarán una amplia gama de habilidades para ayudarte a desarrollar tus ideas digitales.   "
				align="start"
			/>
			<Grid variant="offset">
				{
					projects.map((project) => (
						<li>
							<PortfolioPreview project={project} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>
